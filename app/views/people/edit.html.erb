<% provide(:title, 'Edit person') %>
<%= link_to "<< Back", @person, class: "btn btn-mini" %>
<h1>Edit a person</h1>
<div class="row">
	<div class="span6">
		<%= form_for( @person ) do |f| %>
		<%= render 'fields', f: f %>
			<%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
			<%= link_to "Delete person", @person, method: :delete,
			                                  data: { confirm: "You sure?" }, class: "btn btn-large" %>
			<% end %>
		</div>
	</div>