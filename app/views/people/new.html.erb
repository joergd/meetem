<% provide(:title, 'Add person') %>
<%= link_to "<< Cancel", people_path, class: "btn btn-mini" %>
<h1>Add a person</h1>
<div class="row">
	<div class="span6">
		<%= form_for( @person ) do |f| %>
		
			<%= render 'fields', f: f %>
			
